---
import { Image } from "astro:assets";
import Github from "./icons/Github.astro";
import NextJS from "./icons/NextJS.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindCSS from "./icons/TailwindCSS.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  ASTROICON: {
    name: "Astro",
    class: "bg-[#003159] text-white",
    icon: AstroIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindCSS,
  },
};
const PROJECTS = [
  {
    title: "Hotel Aura de Mallorca",
    description: "(NEEDS VPS FOR BACKEND AND DB FUNCTIONALITY) Hotel website (in React and Express JS) with extra services for the complexity of implementing a weather API that tells you based on the local weather when you book if you can book or not.",
    link: "https://blanchedalmond-shark-422521.hostingersite.com/",
    github: "https://github.com/FeryaelJustice/HotelAuraDeMallorca",
    image: "/projects/hotelaurademallorca.webp",
    tags: [TAGS.TAILWIND, TAGS.ASTROICON],
  },
  {
    title: "Portfolio",
    description: "Professional Portfolio of Feryael Justice, showcasing his projects, experience and best achievements.",
    link: "https://feryaeljustice.dev/",
    github: "https://github.com/feryaeljustice/portfolio.dev",
    image: "/projects/portfolio.webp",
    tags: [TAGS.TAILWIND, TAGS.ASTROICON],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <Image
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              src={image}
              alt={`Screenshot of project ${image}`}
              width="300"
              height="200"
              loading="lazy"
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-100">{title}</h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-400">{description}</div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <Github class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
